# Database Configuration
DB_USER=postgres
DB_PASS=password
DB_NAME=cloud_drive
DB_HOST=localhost
DB_PORT=5432
DB_URL=postgresql+asyncpg://postgres:password@localhost:5432/cloud_drive
DB_URL_SYNC=postgresql://postgres:password@localhost:5432/cloud_drive

# Application Configuration
APP_PORT=8000

# Security (JWT)
JWT_SECRET=your_super_secret_key_change_this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=7
TOKEN_PEPPER=some_random_pepper_string

# Storage Configuration
# Options: "local" or "s3"
STORAGE_TYPE=local
# Required if STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./local_storage_data
MAX_FILE_UPLOAD_SIZE_MB=500

# AWS S3 Configuration (Required if STORAGE_TYPE=s3)
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Rate Limiting
STANDARD_RATE_LIMIT=2000/minute

# Cookies
REFRESH_COOKIE_NAME=refresh_token
HTTPONLY_COOKIE=True
SECURE_COOKIE=False
SAMESITE_COOKIE=Lax
COOKIE_REFRESH_PATH=/api/v1/auth/refresh
MAX_AGE_COOKIE=2592000
